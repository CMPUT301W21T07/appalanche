<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionButton"
            android:src="@drawable/menu"
            android:paddingTop="1dp"
            >
        </ImageView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:paddingLeft="15dp"
        android:textSize="20dp"
        android:text="Experiment Description"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overviewButton"
            android:text="Overview"
            android:textColor="@color/black"
            android:backgroundTint="#bebebe"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trialButton"
            android:text="Trials"
            />
        <Button
            android:id="@+id/questionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Question"
            android:layout_gravity="bottom|end"
           />

    </LinearLayout>


    <TextView
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner: "
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Region: "
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/currentNumbTrials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Number of Trials: "
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/minTrials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum number of trials: "
        android:textSize="10dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:autofillHints="Histogram to be added here"
            android:id="@+id/histogram" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/plot" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics "
            android:textColor="#BE8A2BE2"
            android:textSize="17dp"
            android:paddingLeft="15dp" />

        <TextView
            android:id="@+id/stdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard deviation: "
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q:  "
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mean:  "
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/median"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Median:  "
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />



    </LinearLayout>
</ScrollView>
