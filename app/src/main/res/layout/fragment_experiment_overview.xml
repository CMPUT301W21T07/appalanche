<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Experiment Description"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Owner: "
            android:textColor="#00ffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Status: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Region: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/currentNumbTrials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Current Number of Trials: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/minTrials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Minimum number of trials: "
            android:textColor="@color/black"
            android:textSize="10dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/histogram"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:autofillHints="Histogram to be added here" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/plot"
            android:layout_width="match_parent"
            android:layout_height="200dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Statistics "
            android:textColor="#BE8A2BE2"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/stdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Standard deviation: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Q:  "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Mean:  "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/median"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Median:  "
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>
</ScrollView>
