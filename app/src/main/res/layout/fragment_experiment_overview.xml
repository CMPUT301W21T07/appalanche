<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9932cc"
            android:text="Experiment Description"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner: "
            android:textColor="#0288D1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Region: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/currentNumbTrials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Number of Trials: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/minTrials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum number of trials: "
            android:textColor="#20b2aa"
            android:textSize="14sp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/histogram"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="Histogram to be added here" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/plot"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="Plot to be added here"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textColor="#BE8A2BE2"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/stdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard deviation: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mean: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/median"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Median: "
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
