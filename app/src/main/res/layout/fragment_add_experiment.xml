<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.AddExperimentFragment">

    <EditText
        android:id="@+id/expDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Experiment description" />

    <EditText
        android:id="@+id/expRegion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Experiment region" />

    <EditText
        android:id="@+id/expTrials"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="50dp"
        android:hint="Minimum number of trials" />

    <Spinner
        android:id="@+id/expType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/geoRequired"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Geolocation Required" />

</LinearLayout>